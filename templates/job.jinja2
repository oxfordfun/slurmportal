{% extends 'base.jinja2' %}

{% block style %}
  .truncate {
  width: 250px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  }
{% endblock %}

{% block content %}
  <header class="w3-container w3-deep-orange">
    <h3>Job Detail ({{ job_id }})</h3>
  </header>

  <div class="w3-container w3-panel w3-white">
   <p>
    <table class="w3-table-all">
      <thead>
        <th>Attributes</th>
        <th>Value</th>
      </thead>
      <tbody>
        {% for key, value in job.items() %}
          <tr>
            <td>{{ key }}</td>
            <td>{{ value }}</td>
          </tr>
      {% endfor %}
      </tbody>
    </table>
   </p>
  </div
{% endblock %}
