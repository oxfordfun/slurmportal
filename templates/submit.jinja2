{% extends 'base.jinja2' %}

{% block style %}
  .truncate {
  width: 250px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  }
{% endblock %}

{% block content %}
  <header class="w3-container w3-deep-orange">
    <h3>Submit a job</h3>
  </header>

  <div class="w3-container w3-pale-green w3-panel">

    <form method="POST">
      <p>
        <label>Job name</label>
        <input class="w3-input" type="text" name="job_name" value="myjob"/>
        <label>Output file</label>
        <input class="w3-input" type="text" value="slurmjob-%j.out" name="output"/>
        <label>Error file</label>
        <input class="w3-input" type="text" value="slurmjob-%j.err" name="error"/>
        <label>Job command</label>
<textarea rows=10 class="w3-input" type="textarea" name="job_command">srun echo $HOSTNAME; sleep 60</textarea>
      </p>

        <button class="w3-input w3-blue" type="Submit" name="Submit" value="Submit_Job" value="Submit">Submit</button>
    </form>
    </div>

{% endblock %}
